@23939 = ~[ULGOTH, FEMALES 06]  Always willing to speak to new friends.~
@23940 = ~[CULT MEMBERS 01]  You have not heard and will not see.~
@23941 = ~[CULT MEMBERS 02]  Your time comes. Do not struggle when it does.~
@23942 = ~[CULT MEMBERS 03]  Leave here and do not return until your world ends. ~
@23943 = ~[CULT MEMBERS 04]  We have no time for you.~
@23944 = ~[VILLAGERS, MALE 01]  You are...different.~
@23945 = ~[VILLAGERS, MALE 02]  I smell...outsider?~
@23946 = ~[VILLAGERS, MALE 03]  Speak and leave. I do not wish you around~
@23947 = ~[VILLAGERS, MALE 04]  You are not like us.~
@23948 = ~[VILLAGERS, MALE 05]  Some will not trust you...some like me.~
@23949 = ~[VILLAGERS, MALE 06]  I say my mind: go as soon as you can.~
@23950 = ~[VILLAGERS, FEMALE 01]  You are not like we are.~
@23951 = ~[VILLAGERS, FEMALE 02]  You are unlike. You do not belong.~
@23952 = ~[VILLAGERS, FEMALE 03]  Interesting. You are very different.~
@23953 = ~[VILLAGERS, FEMALE 04]  You are from away? Welcome, then.~
@23954 = ~[VILLAGERS, FEMALE 05]  I don't know you. You are...stranger.~
@23955 = ~[VILLAGERS, FEMALE 06]  I have not seen your like before.~
@23956 = ~[no text]~
