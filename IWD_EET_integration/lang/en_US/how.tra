@24588 = ~"Help!  Please, someone get help!"~
@24589 = ~"My brother's stuck in the well!"~
@24590 = ~"Anyone!  Please help!"~
@24591 = ~"Want to throw briarcones at Purvis?"~
@24592 = ~"I want to go fishing and catch some magic fish."~
@24593 = ~"Uh... Kieran's not looking for me, is he?"~
@24594 = ~"You better not put me in the well."~
@24595 = ~::Hic::~
@24596 = ~"...tankard's almost done..."~
@24597 = ~"...stupid Tybald..."~
@24598 = ~"...fool can keep his filthy shop..."~
@24599 = ~"Need to start heating up those hoops for the barrels..."~
@24600 = ~"Where in the hells did I place those tongs?"~
